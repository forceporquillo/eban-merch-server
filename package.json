{
  "name": "eban-merch-server",
  "version": "1.0.0",
  "description": "API server for Eban Merch App.",
  "main": "src/server.ts",
  "scripts": {
    "start": "nodemon src/server.ts",
    "build": "rm -rf build/ && prettier --write src && tsc",
    "test": "jest --silent --verbose"
  },
  "author": "Aevan Candelaria",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mysql2": "^2.3.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts|tsx|js)"
    ]
  }
}
